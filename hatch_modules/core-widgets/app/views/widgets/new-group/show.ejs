<%- widgetTitle() %>

<%- formTagBegin({
    action: widgetCoreAction('createGroup'),
    method: 'POST',
    class: 'form-vertical'
}) %>

    <div class="control-group">
        <label for="name" class="control-label"><%- t('new-group.name') %></label>
        <div class="controls">
            <input type="text" name="name" id="name" class="span3" />
        </div>
    </div>

    <div class="control-group">
        <label for="url" class="control-label"><%- t('new-group.url') %></label>
        <div class="controls">
            <input type="text" name="url" id="url" class="span3" />
        </div>
    </div>

    <div class="form-actions">
        <button type="submit" class="btn btn-primary"><%- t('new-group.commit') %></button>
    </div>

<%- formTagEnd() %>
