<div class="row">

    <%- partial('content/sidebar', { locals: {pageName: 'manage-tags' }}) %>

    <div class="span10">
        <div class="module">
            <div class="content">

                <h3><%= __('Manage tags') %></h3>

                <hr/>

                <table class="table table-striped" id="member-lists-table">
                    <thead>
                    <tr>
                        <th colspan="2" width="">
                            <%- __('Tag name') %>
                        </th>
                        <th width="10%">
                            <%- __('Filter') %>
                        </th>
                        <th width="10%">
                            <%- __('Posts') %>
                        </th>
                        <th width="7%">
                            <%- __('Actions') %>
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    <% if((req.group.tags || []).length == 0) { %>
                    <tr>
                        <td colspan="5"><%- __('No tags have been defined') %></td>
                    </tr>
                    <% } %>
                    <% (req.group.tags || []).forEach(function(tag) { %>
                        <% if(!tag) return; %>
                    <tr>
                        <td width="2%">
                            <i class="icon-tag"></i>
                        </td>
                        <td>
                            <%- linkTo(tag.name, pathTo.content(tag.id.toString())) %>
                        </td>
                        <td>
                            <% if(tag.filter) { %>
                                <i class="icon-ok"></i>
                            <% } else { %>
                                -
                            <% } %>
                        </td>
                        <td>
                            <%- formatNumber(tag.contentCount) %>
                        </td>
                        <td>
                            <%- linkTo(__('Edit'), pathTo.editTag(tag.id.toString())) %>
                            &nbsp;
                            <%- linkToRemote('<i class="icon-remove"></i>', pathTo.deleteTag(tag.id.toString()), { "data-confirm": __("Are you sure you wish to delete this tag?") }) %>
                        </td>
                    </tr>
                    <% }) %>
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>