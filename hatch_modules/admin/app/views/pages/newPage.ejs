<div class="row">

    <% include _sidebar %>

  <div class="span10">
    <div class="module">
      <div class="content">

        <h3><%- __('Add new page') %></h3>

        <hr/>

        <%- formTagBegin({action: pathTo.groupPages(req.group), remote: true, id: 'page_form', class: 'form-vertical'}) %>
        <% include _pageForm %>
          <div class="form-actions">
            <button type="submit" class="btn btn-primary"><i class="icon-ok icon-white"></i> <%- __('Create page') %></button>
            <%- linkTo(__('Cancel'), pathTo.groupPages(req.group), {class: 'btn'}) %>
          </div>
        <%- formTagEnd() %>

      </div>
    </div>
  </div>
</div>
