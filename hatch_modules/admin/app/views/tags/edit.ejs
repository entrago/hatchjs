<div class="row">

    <% include ../content/_sidebar %>

    <div class="span10">
        <div class="module">
            <div class="content">
                <h3><%= t('tag.edit') %></h3>
                <hr />

                <%- formTagBegin({action: pathTo.groupTag(req.group, tag), remote: true, method: 'PUT', id: 'tag-form' }) %>

                    <% include _form %>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary"><%= t('tag.save') %></button>
                        <a href="<%- pathTo.manageTags() %>" class="btn"><%= t('common.cancel') %></a>
                    </div>
                <%- formTagEnd() %>
            </div>
        </div>
    </div>
</div>
