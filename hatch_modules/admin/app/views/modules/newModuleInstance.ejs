
<%- formTagRemote(pathTo.newModule, {method: 'POST', update: 'modules-table', 'data-target-id': 'modules-table'}) %>

<div class="modal wide">
    <div class="modal-header">
        <a class="close" data-dismiss="modal">Ã—</a>
        <h3>Configure <%= name %> module</h3>
    </div>
    <div class="modal-body">
        <%- partial('modules/moduleInstanceForm', {locals: {module: module}}) %>
    </div>
    <div class="form-actions" style="margin-bottom: 0;">
        <button type="submit" class="btn btn-primary"><i class="icon-ok icon-white"></i> Enable module</button>
        <button class="btn" data-dismiss="modal">Cancel</button>
    </div>
</div>

<%- end() %>

